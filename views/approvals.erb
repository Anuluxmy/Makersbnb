<h1>Approvals List</h1>
<form action ="/" method="get">
  <button type="submit">Home</button>
</form>
<% if @approvals.empty?%>
No Approvals
<% else %>
<ul>
  <% @approvals.each do |approval| %>
    <style> div {border-style: solid;}</style>
    <div {border-style: solid;}><h2>Guest: <%= approval.user.user_name %> Space Name: <%= approval.space.name %> Price Per Night: Â£<%= approval.space.price_per_night.to_s %> Date: <%= approval.date %></h2>
    <h2><%= approval.space.description %></h2>
    <h2>Available Dates: <%= approval.space.available_from %>-<%= approval.space.available_to %></h2>
    <h1><%= approval.status %></h1>
    </div><br>
    <% end %>
</ul>
<% end %>
